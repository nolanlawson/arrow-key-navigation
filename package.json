{
  "name": "arrow-key-navigation",
  "version": "1.1.0",
  "description": "Add left/right key navigation to a KaiOS app or web app",
  "author": "Nolan Lawson <nolan@nolanlawson.com>",
  "license": "Apache-2.0",
  "keywords": [
    "kaios",
    "navigation",
    "accessibility",
    "a11y",
    "focus",
    "dpad",
    "d-pad",
    "arrow",
    "key"
  ],
  "scripts": {
    "lint": "tslint ./src/**/* && standard ./test",
    "lint:fix": "tslint --fix ./src/**/* && standard --fix ./test",
    "build": "pika-pack",
    "prepare": "npm run build",
    "test": "mocha ./test/test.js"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-umd",
        {
          "name": "arrowKeyNavigation"
        }
      ]
    ]
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.7.1",
    "@pika/plugin-build-umd": "^0.7.1",
    "@pika/plugin-build-web": "^0.7.1",
    "@pika/plugin-ts-standard-pkg": "^0.7.1",
    "assert": "^2.0.0",
    "jsdom": "^16.2.2",
    "jsdom-global": "^3.0.2",
    "mocha": "^6.2.3",
    "standard": "^14.3.4",
    "tslint": "^5.20.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.9.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nolanlawson/arrow-key-navigation.git"
  },
  "bugs": {
    "url": "https://github.com/nolanlawson/arrow-key-navigation/issues"
  },
  "homepage": "https://github.com/nolanlawson/arrow-key-navigation#readme"
}
